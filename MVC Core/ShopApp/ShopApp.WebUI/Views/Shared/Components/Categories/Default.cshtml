@model List<Category>
<div class="list-group">
    <a asp-controller="Product" asp-action="List" asp-route-id="" class="list-group-item list-group-item-acction">Tüm Kategoriler</a>
    @foreach (var category in Model)
    {
        @*<a href="#" class="list-group-item list-group-item-acction">@category.Name</a>*@
        <a asp-action="List" asp-controller="Product" asp-route-id="@category.CategoryId" 
        class="list-group-item list-group-item-acction @(ViewBag.SelectedCategory == category.CategoryId.ToString()?"active":"")">@category.Name</a>
    }
</div>